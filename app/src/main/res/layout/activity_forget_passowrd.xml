<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.ForgetPassowrdActivity">

    <include
        android:id="@+id/forget_page_toolbar"
        layout="@layout/app_bar_forget_password"
        />

    <LinearLayout
        android:id="@+id/ui_login_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ui_loginlogo"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_page_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/logologin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wizard_text"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/font_opensans"
            android:textSize="13sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/ui_forgot_email"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:hint="Email"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15sp"
            android:textColorHint="#807f7f"
            android:layout_marginRight="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="13dp"
            android:drawableRight="@drawable/ic_envelope"
            android:inputType="textEmailAddress"
            android:background="@drawable/linear_backgraound"/>



        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/ui_submit_email"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Отправить"
            android:fontFamily="@font/font_opensans"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/complete_button_layout"
            />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_forget_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/ui_move_login"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Уже есть аккаунт? войти в систему"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="2sp"
            android:fontFamily="@font/font_opensans"
            android:textSize="13sp"
            />

    </LinearLayout>


</RelativeLayout>