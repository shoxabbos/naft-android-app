<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activites.PostJobActivity">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"   android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ui_detail_app_bar_post_job"
        android:elevation="10dp"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Post A Job"
            android:textColor="#ffffff"
            android:layout_marginRight="60dp"
            android:textSize="20dp"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ui_detail_app_bar_post_job">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_below="@+id/ui_app_bar_send_proposal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/font_medium"
                android:layout_margin="15dp"
                android:textColor="#323232"
                android:text="Post A Job"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:background="#c0c0c0" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_below="@+id/ui_app_bar_send_proposal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Job Description"/>


            </LinearLayout>

            <EditText

                android:id="@+id/ui_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="45dp"
                android:paddingLeft="10dp"
                android:hint="Job Title"
                android:gravity="start"
                android:paddingTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:inputType="textMultiLine"
                android:textSize="13dp"
                android:fontFamily="@font/font_regular"
                android:background="@drawable/linear_backgraound"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:weightSum="2">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_backgraound">

                    <Spinner
                        android:id="@+id/ui_project_level"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </Spinner>


                </LinearLayout>
                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_backgraound">

                    <Spinner
                        android:id="@+id/ui_job_duration"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </Spinner>


                </LinearLayout>
                <LinearLayout

                    android:layout_below="@+id/ui_main_layout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_backgraound">

                    <Spinner
                        android:id="@+id/ui_freelancer_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </Spinner>


                </LinearLayout>
                <LinearLayout

                    android:layout_below="@+id/ui_main_layout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_backgraound">

                    <Spinner
                        android:id="@+id/ui_english_level"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </Spinner>


                </LinearLayout>
                <LinearLayout

                    android:layout_below="@+id/ui_main_layout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_backgraound">

                    <Spinner
                        android:id="@+id/ui_job_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </Spinner>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/ui_middle_layout"
                    android:layout_below="@+id/ui_main_layout"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_backgraound">

                    <EditText
                        android:id="@+id/ui_cost"
                        android:fontFamily="@font/font_regular"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="number"
                        android:background="@null"
                        android:paddingLeft="10dp"
                        android:hint="Стоимость"
                        android:textSize="13dp"/>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Job Categories"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/linear_backgraound"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/font_regular"
                    android:text="Categories:"
                    android:textSize="15dp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:paddingLeft="15dp"/>
                <io.apptik.widget.multiselectspinner.MultiSelectSpinner
                    android:id="@+id/ui_category_list_post_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/font_medium"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    >
                </io.apptik.widget.multiselectspinner.MultiSelectSpinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_below="@+id/ui_app_bar_send_proposal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Languages"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/linear_backgraound"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/font_regular"
                    android:text="language:"
                    android:textSize="15dp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:paddingLeft="15dp"/>
                <io.apptik.widget.multiselectspinner.MultiSelectSpinner
                    android:id="@+id/ui_language_list_post_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/font_medium"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    >
                </io.apptik.widget.multiselectspinner.MultiSelectSpinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_below="@+id/ui_app_bar_send_proposal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Job Details"/>


            </LinearLayout>

            <EditText
                android:id="@+id/ui_short_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/linear_backgraound"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:textColorHint="#5e5e5e"
                android:gravity="start"
                android:fontFamily="@font/font_regular"
                android:imeActionLabel="Next"
                android:imeOptions="actionUnspecified"
                android:inputType="textMultiLine"
                android:textSize="15sp"
                android:maxLines="20"
                android:padding="7sp"
                android:hint="Job Content"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_below="@+id/ui_app_bar_send_proposal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Skills Required"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/linear_backgraound"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/font_regular"
                    android:text="Skills:"
                    android:textSize="15dp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:paddingLeft="15dp"/>
                <io.apptik.widget.multiselectspinner.MultiSelectSpinner
                    android:id="@+id/ui_skill_list_post_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/font_medium"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    >
                </io.apptik.widget.multiselectspinner.MultiSelectSpinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_below="@+id/ui_app_bar_send_proposal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Ваше местоположения"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/linear_backgraound"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/font_regular"
                    android:text="Location:"
                    android:textSize="15dp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:paddingLeft="15dp"/>
                <Spinner
                    android:id="@+id/ui_location_list_post_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/font_medium"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    >
                </Spinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <EditText
                android:id="@+id/ui_your_address"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/linear_background"
                android:fontFamily="@font/font_regular"
                android:textColorHint="#5e5e5e"
                android:inputType="textEmailAddress"
                android:imeActionLabel="Next"
                android:imeOptions="actionUnspecified"
                android:hint="Your Location"
                android:textSize="15sp"
                android:padding="7sp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/font_opensans"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10sp"
                android:text="@string/profile_location"
                android:textSize="16dp"
                />


            <EditText
                android:id="@+id/ui_latitude"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/linear_backgraound"
                android:hint="Enter Latitude"
                android:imeActionLabel="Next"
                android:imeOptions="actionUnspecified"
                android:textColorHint="#5e5e5e"
                android:fontFamily="@font/font_regular"
                android:textSize="15sp"
                android:padding="7sp"


                />
            <EditText
                android:id="@+id/ui_longitude"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_marginBottom="15dp"
                android:fontFamily="@font/font_regular"
                android:background="@drawable/linear_backgraound"
                android:textColorHint="#5e5e5e"
                android:hint="Enter Longitude"
                android:imeActionLabel="Next"
                android:imeOptions="actionUnspecified"
                android:textSize="15sp"
                android:padding="7sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_height="180sp">
                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/map"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".MapsActivity" />


            </LinearLayout>

            <Switch
                android:id="@+id/ui_featured_check"
                android:layout_width="match_parent"
                android:text="Featured Job"
                android:fontFamily="@font/font_regular"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="20" />

            <TextView
                android:id="@+id/featured_job_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="1dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <Switch
                    android:id="@+id/ui_attachment_check"
                    android:layout_width="match_parent"
                    android:text="Your Attachments"
                    android:fontFamily="@font/font_medium"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#323232"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <TextView
                    android:id="@+id/attachment_job_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="1dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <uz.itmaker.naft.Activites.WrapContentListView
                android:id="@+id/list_view_post_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:divider="@null"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">


                <Button
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ui_send_post"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fdp_fourtyfive"
                    android:text="Update"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_medium"
                    android:layout_marginBottom="@dimen/dp_fifteen"
                    android:background="@drawable/complete_button_layout"
                    android:padding="@dimen/dp_five"
                    android:elevation="10dp"
                    android:layout_gravity="left"
                    android:gravity="center" />

                <Button
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ui_select_file_post_job"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fdp_fourtyfive"
                    android:text="Select File"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_medium"
                    android:layout_marginBottom="@dimen/dp_fifteen"
                    android:background="@drawable/selectbutton_layout"
                    android:padding="@dimen/dp_five"
                    android:elevation="10dp"
                    android:layout_gravity="right"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <ProgressBar
            android:id="@+id/ui_bookloading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:background="@drawable/circle_shape"
            android:elevation="10dp"
            android:visibility="gone"
            />

    </RelativeLayout>




</RelativeLayout>