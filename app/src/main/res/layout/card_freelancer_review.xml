<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/ui_card_client_feedback_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ui_review_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                   />

                <LinearLayout

                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_marginLeft="105dp"
                    android:layout_marginRight="15dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="8px"
                            android:src="@drawable/ic_check_circle_black_24dp"/>

                        <TextView
                            android:id="@+id/ui_review_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:maxLines="1"
                            android:text="Alfredo Bossard"
                            android:textSize="13dp"
                            android:textColor="#323232"/>

                    </LinearLayout>



                    <TextView
                        android:id="@+id/ui_review_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_medium"
                        android:text="Top PHP Excwl Skills"
                        android:maxLines="1"
                        android:textSize="15dp"
                        android:textColor="#323232"/>


                </LinearLayout>




            </RelativeLayout>

            <View
                android:layout_below="@+id/ui_card_client_feedback_main"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dddddd"
                />


            <LinearLayout
                android:id="@+id/ui_linear"
                android:layout_below="@+id/ui_card_client_feedback_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/font_medium"
                        android:src="@drawable/ic_star_border_black_24dp"

                        />

                    <TextView
                        android:id="@+id/ui_review_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginner"
                        android:fontFamily="@font/font_regular"
                        android:textColor="#323232"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_margin="11dp"
                        android:fontFamily="@font/font_medium"
                        android:src="@drawable/ic_flag"

                        />

                    <TextView
                        android:id="@+id/ui_review_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="United States"
                        android:fontFamily="@font/font_regular"
                        android:textColor="#323232"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"


                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/font_medium"
                        android:src="@drawable/ic_timer_black_24dp"

                        />

                    <TextView
                        android:id="@+id/ui_review_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="May 30,2013"
                        android:fontFamily="@font/font_regular"
                        android:textColor="#323232"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/font_medium"
                        android:src="@drawable/ic_star_border_black_24dp"

                        />
                    <TextView
                        android:id="@+id/ui_review_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:fontFamily="@font/font_regular"
                        android:textColor="#323232"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"/>


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ui_linear">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    />

                <TextView
                    android:id="@+id/ui_review_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wizard_text"
                    android:textColor="#323232"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"

                    android:layout_margin="15dp"
                    android:fontFamily="@font/font_opensans"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>
            </RelativeLayout>





        </RelativeLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>