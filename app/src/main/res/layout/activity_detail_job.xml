<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activites.DetailJobActivity">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"   android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ui_detail_app_bar_job"
        android:elevation="10dp"
        android:background="@color/colorPrimary">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/background_home_app_bar">


            <TextView
                android:id="@+id/btn_restore_purchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:fontFamily="@font/font_opensans"
                android:textSize="13dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:hint="@string/app_bar_home_text"
                android:textColorHint="@color/white"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/ui_detail_app_bar_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    />
                <TextView
                    android:id="@+id/ui_latest_job_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:textColor="#323232"
                    android:fontFamily="@font/font_opensans"
                    android:text="Choosen Design"/>
            </LinearLayout>

            <TextView
                android:id="@+id/ui_latest_job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/font_medium"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="Webpage Takes Many Seconds to Load For First Time" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ui_info_main"
                android:background="#fafafa"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    />
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:text="Карьерный уровень"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/font_medium"
                        android:layout_marginLeft="20dp"

                        />

                    <TextView
                        android:id="@+id/ui_latest_carrer_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:text="Профессиональный"
                        android:maxLines="1"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/font_opensans"
                        android:layout_marginRight="20dp"


                        />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:text="Адрес"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/font_medium"
                        android:layout_marginLeft="20dp"

                        />

                    <TextView
                        android:id="@+id/ui_latest_job_country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:maxLines="1"
                        android:text="Tashkent"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/font_opensans"
                        android:layout_marginRight="20dp"

                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:text="Тип вакансии"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/font_medium"
                        android:layout_marginLeft="20dp"

                        />

                    <TextView
                        android:id="@+id/ui_latest_job_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:maxLines="1"
                        android:text="Фиксированный"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/font_opensans"
                        android:layout_marginRight="20dp"


                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:text="Время"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/font_medium"
                        android:layout_marginLeft="20dp"

                        />

                    <TextView
                        android:id="@+id/ui_latest_job_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:maxLines="1"
                        android:text="15 Days"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/font_opensans"
                        android:layout_marginRight="20dp"


                        />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:text="Стоимость"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/font_medium"
                        android:layout_marginLeft="20dp"

                        />

                    <TextView
                        android:id="@+id/ui_latest_job_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#323232"
                        android:maxLines="1"
                        android:text="100$"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/font_opensans"
                        android:layout_marginRight="20dp"


                        />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd"
                    />

            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/font_medium"
                android:layout_margin="15dp"
                android:textColor="#323232"
                android:text="Информация"/>


            <TextView
                android:id="@+id/ui_latest_job_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_job_text"
                android:textColor="#323232"
                android:textSize="15dp"
                android:fontFamily="@font/font_opensans"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"/>


            <LinearLayout
                android:id="@+id/ui_skill_layout_latest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Требуемые навыки"/>

                <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/skills_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:shimmer_demo_child_count="2"
                    app:shimmer_demo_grid_child_count="2"
                    app:shimmer_demo_layout="@layout/layout_demo_grid"
                    app:shimmer_demo_angle="20"
                    />

            </LinearLayout>





            <LinearLayout
                android:id="@+id/ui_attachment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:fontFamily="@font/font_medium"
                    android:layout_margin="15dp"
                    android:textColor="#323232"
                    android:text="Прикрепление документы"/>

                <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/latest_job_attatchment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:shimmer_demo_child_count="3"
                    app:shimmer_demo_grid_child_count="3"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="15dp"
                    app:shimmer_demo_layout="@layout/layout_demo_category"
                    app:shimmer_demo_layout_manager_type="grid"
                    app:shimmer_demo_angle="20"
                    />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_toLeftOf="@+id/ui_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/ui_send_proposal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Отправить предложение"

                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_medium"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/job_single_button_background"
                        android:padding="5dp"
                        android:elevation="10dp"
                        android:layout_margin="15dp"

                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ui_relative"
                    android:layout_width="120dp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ui_share"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toLeftOf="@+id/ui_Report"
                        android:src="@drawable/ic_share_black_24dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_medium"
                        android:background="@drawable/job_single_button_background_two"
                        android:padding="10dp"

                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        />

                    <ImageView
                        android:id="@+id/ui_Report"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_medium"
                        android:background="@drawable/complete_button_layout"
                        android:padding="10dp"

                        android:src="@drawable/ic_warning_white_24dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"

                        />
                </RelativeLayout>




            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>