<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:id="@+id/ui_company_list_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:elevation="15dp"
        card_view:cardMaxElevation="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/ui_banner_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ui_company_banner_image"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/image_nav_main"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#67000000"
                android:scaleType="centerCrop"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ui_profile_image_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:elevation="10dp"
                android:background="#ffffff"
                android:padding="3dp">
                <ImageView
                    android:id="@+id/ui_company_profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:scaleType="centerCrop"/>


            </LinearLayout>


            <ImageView
                android:id="@+id/company_fav"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:layout_below="@+id/ui_profile_image_company"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginRight="20px"
                android:src="@drawable/fav"
                android:padding="3dp"
                />


            <ImageView
                android:id="@+id/company_unfav"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:layout_below="@+id/ui_profile_image_company"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginRight="20px"
                android:src="@drawable/unfav"
                android:padding="3dp"
                />



        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="100dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8px"
                    android:src="@drawable/verifiedimage"/>

                <TextView
                    android:id="@+id/ui_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_regular"
                    android:maxLines="1"
                    android:text="Alfredo Bossard"
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#323232"/>

            </LinearLayout>

            <TextView
                android:id="@+id/ui_company_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="Classified Posting , Data Entry..."
                android:maxLines="1"
                android:textSize="15dp"
                android:textColor="#323232"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_opensans"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_marginRight="24px"
                    android:textSize="13dp"
                    android:text="Вакансии"
                    android:textColor="#55acee"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="24px"
                    android:layout_gravity="center"
                    android:background="#c0c0c0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_opensans"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    android:text="Подробнее"
                    android:textColor="#55acee"

                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>